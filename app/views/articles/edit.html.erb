<h1 class="text-2xl font-bold mb-4 text-center">Edit Article</h1>

<div class="flex justify-center">
  <%= form_with model: @article, local: true, html: { class: 'bg-neutral-100/30 p-6 rounded shadow-md w-4/5' } do |form|
    %>

    <% if @article.errors.any? %>
      <div id="error_explanation" class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h2 class="font-bold">
          <%= pluralize(@article.errors.count, "error" ) %> prohibited this article from being saved:
        </h2>
        <ul class="list-disc pl-5">
          <% @article.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
            <% end %>
        </ul>
      </div>
      <% end %>

        <div class="mb-4">
          <%= form.label :title, class: 'block text-sm font-medium text-gray-700' %>
            <%= form.text_field :title,
              class: 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:outline-none focus:ring focus:ring-blue-300'
              %>
        </div>

        <div class="mb-4">
          <%= form.label :body, class: 'block text-sm font-medium text-gray-700' %>
            <%= form.text_area :body,
              class: 'mt-1 block w-full h-52 border border-gray-300 rounded-md shadow-sm p-2 focus:outline-none focus:ring focus:ring-blue-300'
              %>
        </div>

        <div>
          <%= form.submit 'Update Article' ,
            class: 'w-full bg-blue-600 text-white font-bold py-2 rounded hover:bg-blue-700 transition duration-200' %>
        </div>
        <% end %>
</div>