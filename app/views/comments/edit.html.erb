<h1>Edit Comment</h1>

<%= form_with(model: [ @article, @comment ]) do |form| %>
  <div class="form-group">
    <%= form.label :content, 'Comment' %>
    <%= form.text_area :content, 
        class: 'form-control', 
        rows: 4 %>
  </div>
  <%= form.submit 'Update Comment', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Cancel', @article, class: 'btn btn-secondary' %>
