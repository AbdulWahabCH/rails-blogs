<h2 class="text-3xl">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { multipart: true,method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </br>
  <div class="field">
    <%= f.label :avatar, 'Avatar' %>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions btn btn-primary my-5 outline outline-slate-300 text-center w-[20%] py-2 rounded-md hover:outline-slate-500 hover:bg-slate-100">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
