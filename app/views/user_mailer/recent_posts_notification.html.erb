<h1 class="text-2xl font-bold mb-4">Hello <%= @user.username %>,</h1>
<p class="mb-4">Here are the articles posted in the last 24 hours:</p>
<ul class="list-disc list-inside">
    <% @articles.each do |article| %>
        <li class="mb-2">
            <%= link_to article.title, article_url(article), class: "text-blue-600 hover:underline" %>
        </li>
        <% end %>
</ul>